# Vest - Local Development Configuration
# This file is used for running the app locally WITHOUT Docker
# If using Docker, environment variables are set in docker-compose.yml

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://vest:vest_dev_password@localhost:5432/vest_db
PGHOST=localhost
PGPORT=5432
PGUSER=vest
PGPASSWORD=vest_dev_password
PGDATABASE=vest_db

# Application Configuration
NODE_ENV=development
PORT=5000

# Session Secret
SESSION_SECRET=local_dev_secret_change_in_production

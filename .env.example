# Vest - Local Development Environment Variables
# Copy this file to .env and update values as needed

# Database Configuration (Docker default values)
DATABASE_URL=postgresql://vest:vest_dev_password@postgres:5432/vest_db
PGHOST=postgres
PGPORT=5432
PGUSER=vest
PGPASSWORD=vest_dev_password
PGDATABASE=vest_db

# Application Configuration
NODE_ENV=development
PORT=5000
SESSION_SECRET=local_dev_secret_change_in_production

# OpenAI API Key
# For local development: Use a dummy key (AI features won't work but app will run)
# For production: Replace with your actual OpenAI API key
OPENAI_API_KEY=sk-dummy-key-1234-for-local-development

# Note: These variables are automatically set by docker-compose.yml
# You only need a .env file if running without Docker
